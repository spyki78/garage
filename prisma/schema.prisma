generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int              @id @default(autoincrement())
  email        String           @unique
  hashed_password     String
  role         Role             @default(EMPLOYEE)
  //posts        Post[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Annonce {
 id            Int              @id @default(autoincrement())
 title         Int
 price         Float
 year          DateTime
 mileage       Int
 features      String[]
 equipments    String[]
 photos        String[]

 created_at DateTime @default(now())
 updated_at DateTime @updatedAt
}

model review {
 id            Int              @id @default(autoincrement())
 name          String
 message       String
 rating        Int
 isValid       Boolean @default(false)

 created_at DateTime @default(now())
 updated_at DateTime @updatedAt
}

model contact {
id            Int              @id @default(autoincrement())
object        String
firstName     String
lastName      String
email         String
phone         Int
message       String

created_at DateTime @default(now())
updated_at DateTime @updatedAt
}


enum Role {
  EMPLOYEE
  ADMIN
}


